{
  "name": "@paninifs/test-runner",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Playwright test runner for PaniniFS workspace.",
  "scripts": {
    "test": "playwright test ../tests/js",
    "test:firefox": "playwright test --project=firefox ../tests/js",
    "test:headed": "playwright test --headed ../tests/js",
    "test:ui": "playwright test --ui ../tests/js",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0"
  }
}
