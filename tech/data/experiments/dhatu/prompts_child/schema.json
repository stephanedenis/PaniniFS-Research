{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dhatu Child-Directed Prompts",
  "type": "object",
  "properties": {
    "lang": {"type": "string"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "text": {"type": "string"},
          "phenomena": {"type": "array", "items": {"type": "string"}},
          "meta": {"type": "object"}
        },
        "required": ["id", "text", "phenomena"]
      }
    }
  },
  "required": ["lang", "items"]
}
